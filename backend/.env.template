# Application Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Authentication Settings
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=docqa
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB Settings
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName
MONGODB_DB=rag

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Pinecone Settings
PINECONE_API_KEY=your-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX=your-index-name

# OpenRouter Settings
OPENROUTER_API_KEY=your-api-key
OPENROUTER_MODEL=openai/gpt-4

# Cohere Settings
COHERE_API_KEY=your-api-key

# Deployment Settings
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id
RAILWAY_TOKEN=your-railway-token

# Monitoring Settings
PROMETHEUS_PORT=8001
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json  # text, json
LOG_FILE=rag.log

# Security Settings
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cache Settings
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000  # Maximum number of items in cache

# RAG Pipeline Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=100
VECTOR_TOP_K=5
FINAL_TOP_K=3
VECTOR_WEIGHT=0.7
BM25_WEIGHT=0.15
TFIDF_WEIGHT=0.15
RERANK_THRESHOLD=0.5

# Test Settings
TEST_POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/docqa_test
TEST_REDIS_URL=redis://localhost:6379/1

# Optional: GPU Settings
# Uncomment if using GPU
# CUDA_VISIBLE_DEVICES=0
# TORCH_DEVICE=cuda

# Optional: Sentry Settings
# Uncomment if using Sentry
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=1.0

# Optional: AWS Settings
# Uncomment if using AWS
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-west-2
# S3_BUCKET=your-bucket-name

# Optional: Email Settings
# Uncomment if using email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com

# Optional: Slack Settings
